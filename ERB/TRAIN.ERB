
@TRAIN_HISTORY_LOAD
#LOCALSIZE 3
LOCAL:1 = 50
$LOAD_LOOP
LOCAL:2 = LINECOUNT
CALL PRINT_SAVEDATA, LOCAL:1
SIF LOCAL:1 > 50
	PRINT [0]이전 페이지로 돌아온다
CHKDATA LOCAL:1 * 20 + 20
SIF !RESULT
	PRINT [1]다음 페이지로 나아간다
SIF !LINEISEMPTY()
	PRINTL 
PRINTL [100]중지
INPUT
SELECTCASE RESULT
CASE 0
	LOCAL:1 -= 1
	CLEARLINE LINECOUNT - LOCAL:2
CASE 1
	LOCAL:1 += 1
	CLEARLINE LINECOUNT - LOCAL:2
CASE 100
	RETURN 0
CASEELSE
	LOCAL = RESULT
	CHKDATA LOCAL
	IF RESULT
		CLEARLINE 1
		REUSELASTLINE
	ELSE
		GLOBAL:이력로드중 = 1
		LOADDATA LOCAL
	ENDIF
ENDSELECT
GOTO LOAD_LOOP
